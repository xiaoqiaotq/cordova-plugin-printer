<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-printer" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>printer</name>
    <js-module name="printer" src="www/printer.js">
        <clobbers target="printer"/>
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="PrintPlugin">
                <param name="android-package" value="org.xiaoqiaotq.cordova.printer.PrintPlugin"/>
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
            <uses-permission android:name="android.permission.BLUETOOTH" />
        </config-file>
        <source-file src="src/android/App.java" target-dir="src/org/xiaoqiaotq/cordova/printer"/>
        <source-file src="src/android/BluetoothListActivity.java" target-dir="src/org/xiaoqiaotq/cordova/printer"/>
        <source-file src="src/android/DeviceConnFactoryManager.java" target-dir="src/org/xiaoqiaotq/cordova/printer"/>
        <source-file src="src/android/PrinterCommand.java" target-dir="src/org/xiaoqiaotq/cordova/printer"/>
        <source-file src="src/android/PrintPlugin.java" target-dir="src/org/xiaoqiaotq/cordova/printer"/>
        <lib-file src="lib/android/printersdkv1.jar"/>
        <resource-file src="src/android/res/drawable/background_corner.xml" target="res/drawable/background_corner.xml" />
        <resource-file src="src/android/res/layout/bluetooth_device_name_item.xml" target="res/layout/bluetooth_device_name_item.xml" />
        <resource-file src="src/android/res/layout/dialog_bluetooth_list.xml" target="res/layout/dialog_bluetooth_list.xml" />
        <resource-file src="src/android/res/values/colors.xml" target="res/values/colors.xml" />


    </platform>
</plugin>